  <template id="clecarouge_product_quantite" inherit_id="website_sale.product"
    name="Clé Carouge product quantite">
    <xpath expr="//div[@id='o_wsale_cta_wrapper']" position="before">
      <p>Quantité</p>
    </xpath>
  </template>

  <template id="clecarouge_product_cta_wrapper" inherit_id="website_sale.product"
    name="Clé Carouge product CTA wrapper">
    <xpath expr="//div[@id='o_wsale_cta_wrapper']" position="attributes">
      <attribute name="class">cc_cta_wrapper</attribute>
    </xpath>
  </template>

 <template id="clecarouge_product_no_breadcrumbs" inherit_id="website_sale.product" name="Clé Carouge product no breadcrumbs">
  <xpath expr="//section[@id='product_detail']/*[hasclass('row')]" position="replace">
  </xpath>
 </template>

  <template id="clecarouge_product_description" inherit_id="website_sale.product"
    name="Clé Carouge product descirption">
    <xpath expr="//div[@id='product_details']/p[hasclass('text-muted')]" position="replace">
    </xpath>
  </template>

  <template id="clecarouge_product_after_price" inherit_id="website_sale.product"
    name="Clé Carouge product after price">
    <xpath expr="//div[@id='product_attributes_simple']" position="before">
      <p t-field="product.description_sale"
        placeholder="A short description that will also appear on documents." />
    </xpath>
  </template>

  <template id="clecarouge_product_attributes" inherit_id="website_sale.product"
    name="Clé Carouge product attributes">
    <xpath expr="//div[@id='product_attributes_simple']" position="replace">
      <t t-set="single_value_attributes"
        t-value="product.valid_product_template_attribute_line_ids._prepare_single_value_for_display()" />
      <div class="cc_attributes">
        <t t-foreach="single_value_attributes" t-as="attribute">
          <div class="cc_label">
            <span t-field="attribute.name" />
          </div>
          <div class="cc_description">
            <t t-foreach="single_value_attributes[attribute]" t-as="ptal">
              <span t-field="ptal.product_template_value_ids._only_active().name" />
            </t>
          </div>
        </t>
      </div>
    </xpath>
  </template>

  <template id="clecarouge_product_search" inherit_id="website_sale.product"
    name="Clé Carouge product search">
    <xpath expr="//section[@id='product_detail']" position="after">
      <div class="cc_search hidden">
        <t t-call="website.website_search_box_input">
          <t t-set="search_type" t-valuef="all" />
          <t t-set="action" t-valuef="/website/search" />
          <t t-set="limit" t-valuef="5" />
          <t t-set="display_image" t-valuef="true" />
          <t t-set="display_description" t-valuef="true" />
          <t t-set="display_extra_link" t-valuef="true" />
          <t t-set="display_detail" t-valuef="true" />
        </t>
        <div class="cc_shadow" onClick="closeSearch()"></div>
      </div>
    </xpath>
  </template>

