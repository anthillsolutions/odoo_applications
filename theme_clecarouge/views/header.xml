<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
  <template id="clecarouge_header" inherit_id="website.layout" name="CleCarouge Header">
    <xpath expr="//header" position="replace">
      <header id="clecarouge_nav" class="cc_header hidden" onclick="closeMenus()">
        <nav id="cc_nav">
          <a href="/">
            <img src="/theme_clecarouge/static/img/logo.svg" alt="logo" height="100" width="300"></img>
          </a>
          <ul>
            <li>
              <a href="/#a-propos">A propos</a>
            </li>
            <li>
              <a href="/shop">Boutique</a>
            </li>
            <li>
              <a href="/#contact">Contact</a>
            </li>
            <li onClick="openSearch()" class="shop_only">
              <img src="/theme_clecarouge/static/img/icone_rechercher.svg" width="32px" height="32px" />
            </li>
            <li class="shop_only">
              <a href="/web/login" class="no_border">
                <img src="/theme_clecarouge/static/img/icone_creer_un_compte.svg" width="32px"
                  height="32px" />
              </a>
              <t t-call="portal.user_dropdown"></t>
            </li>
            <li class="shop_only">
              <a href="/shop/cart" class="no_border">
                <img src="/theme_clecarouge/static/img/icone_panier.svg" width="32px" height="32px" />
              </a>
            </li>
          </ul>
        </nav>
        <a href="/" class="cc_logo">
          <img src="/theme_clecarouge/static/img/favicon.svg" alt="logo" height="100" width="100"></img>
        </a>
        <button class="cc_nav" onclick="toggleMenuMobile()">
          <img src="/theme_clecarouge/static/img/menu.svg" height="32px" width="32px"></img>
        </button>
      </header>
    </xpath>
  </template>
</odoo>