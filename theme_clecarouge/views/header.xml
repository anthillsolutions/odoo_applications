<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
  <template id="clecarouge_header" inherit_id="portal.frontend_layout" name="CleCarouge Header">
    <xpath expr="//header" position="replace">
      <header id="clecarouge_nav" class="cc_header hidden" onclick="closeMenus()">
        <nav id="cc_nav">
          <a href="/" class="cc_nav_logo">
            <img class="desktop-only" src="/theme_clecarouge/static/img/logo.svg" alt="logo" height="100" width="300"></img>
            <img class="mobile-only" src="/theme_clecarouge/static/img/favicon.svg" alt="logo" height="60" width="60"></img>
          </a>
          <ul>
            <li>
              <a href="/#a-propos">A propos</a>
            </li>
            <li>
              <a href="/shop">Boutique</a>
            </li>
            <li>
              <a href="/#contact">Contact</a>
            </li>
            <li onClick="openSearch()" class="shop_only">
              <img src="/theme_clecarouge/static/img/icone_rechercher.svg" width="32px"
                height="32px" />
            </li>
            <li class="shop_only">
              <t t-set="is_connected" t-value="website.user_id != user_id" />
              <t t-if="is_connected">
                <a href="/my/home" class="no_border">
                  <img src="/theme_clecarouge/static/img/icone_creer_un_compte.svg" width="32px"
                    height="32px" />
                </a>
              </t>
              <t t-else="">
                <a href="/web/login" class="no_border">
                  <img src="/theme_clecarouge/static/img/icone_creer_un_compte.svg" width="32px"
                    height="32px" />
                </a>
              </t>
              <t t-call="portal.user_dropdown"></t>
            </li>

            <li class="shop_only shop_cart">
              <a href="/shop/cart" class="no_border">
                <img src="/theme_clecarouge/static/img/icone_panier.svg" width="32px" height="32px" />
              </a>

              <t t-set="website_sale_cart_quantity"
                 t-value="request.session['website_sale_cart_quantity'] if 'website_sale_cart_quantity' in request.session else website.sale_get_order().cart_quantity or 0" />
              <t t-set="show_cart" t-value="true" />
              <div class="shop-pill hidden">
                <span class="my_cart_quantity"
                  t-esc="website_sale_cart_quantity"
                  t-att-data-order-id="request.session.get('sale_order_id', '')" />
              </div>
            </li>
          </ul>
          <button class="cc_close_menu" onclick="toggleMenuMobile()">
            <img src="/theme_clecarouge/static/img/cross.svg" height="32px" width="32px"></img>
          </button>
        </nav>
        <a href="/" class="cc_logo">
          <img src="/theme_clecarouge/static/img/favicon.svg" alt="logo" height="60" width="60"></img>
        </a>
        <button class="cc_nav" onclick="toggleMenuMobile()">
          <img src="/theme_clecarouge/static/img/menu.svg" height="32px" width="32px"></img>
        </button>
      </header>
    </xpath>
  </template>
</odoo>