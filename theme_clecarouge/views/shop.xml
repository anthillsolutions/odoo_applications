<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <template id="clecarouge_shop_products" inherit_id="website_sale.products" name="CleCarouge Shop Products" active="True">
    <xpath expr="//div[@id='wrap']" position="replace">
      <section id="cc-shop" class="cc-shop" onclick="closeMenus()">
        <div class="shop-grid">
          <div>
            <t t-foreach="products" t-as="product">
              <t t-if="product_index % 3 == 0">
                <a t-att-href="product.website_url" t-attf-class="#{'unpublished' if not product.website_published else ''} shop-item">
                  <t t-set="image_holder" t-value="product._get_image_holder()" />
                  <span t-field="image_holder.image_1920"
                    t-options="{'widget': 'image', 'preview_image': 'image_1024' if product_image_big else 'image_256', 'itemprop': 'image'}"
                    class="d-flex h-100 justify-content-center align-items-center" />
                  <div class="shop-item-description">
                    <p>
                      <span t-field="product.name"></span>
                    </p>
                    <t t-set="combination_info"
                      t-value="product._get_combination_info(only_template=True, add_qty=add_qty or 1, pricelist=pricelist)" />
                    <p>
                      <span t-esc="combination_info['price']" style="white-space: nowrap;"
                        t-options="{'widget': 'monetary','display_currency': website.currency_id}" />
                    </p>
                  </div>
                </a>
              </t>
            </t>
          </div>

          <div>
            <t t-foreach="products" t-as="product">
              <t t-if="product_index % 3 == 1">
                <a t-att-href="product.website_url"
                  t-attf-class="#{'unpublished' if not product.website_published else ''} shop-item">
                  <t t-set="image_holder" t-value="product._get_image_holder()" />
                  <span t-field="image_holder.image_1920"
                    t-options="{'widget': 'image', 'preview_image': 'image_1024' if product_image_big else 'image_256', 'itemprop': 'image'}"
                    class="d-flex h-100 justify-content-center align-items-center" />
                  <div class="shop-item-description">
                    <p>
                      <span t-field="product.name"></span>
                    </p>
                    <t t-set="combination_info"
                      t-value="product._get_combination_info(only_template=True, add_qty=add_qty or 1, pricelist=pricelist)" />
                    <p>
                      <span t-esc="combination_info['price']" style="white-space: nowrap;"
                        t-options="{'widget': 'monetary','display_currency': website.currency_id}" />
                    </p>
                  </div>
                </a>
              </t>
            </t>
          </div>

          <div>
            <t t-foreach="products" t-as="product">
              <t t-if="product_index % 3 == 2">
                <a t-att-href="product.website_url"
                  t-attf-class="#{'unpublished' if not product.website_published else ''} shop-item">
                  <t t-set="image_holder" t-value="product._get_image_holder()" />
                  <span t-field="image_holder.image_1920"
                    t-options="{'widget': 'image', 'preview_image': 'image_1024' if product_image_big else 'image_256', 'itemprop': 'image'}"
                    class="d-flex h-100 justify-content-center align-items-center" />
                  <div class="shop-item-description">
                    <p>
                      <span t-field="product.name"></span>
                    </p>
                    <p>
                      <span t-esc="combination_info['price']" style="white-space: nowrap;"
                        t-options="{'widget': 'monetary','display_currency': website.currency_id}" />
                    </p>
                  </div>
                </a>
              </t>
            </t>
          </div>
        </div>

        <div class="shop-options">
          <div id="options-filter" class="shop-options-filter">
            <ul>
              <li>
                <a href="/shop">
                  Tout
                </a>
              </li>
              <li t-foreach="categories" t-as="c">
                <a t-att-href="keep('/shop/category/' + slug(c), category=0)" t-field="c.name">
                </a>
              </li>
            </ul>

            <button onclick="openMenu('options-filter')">
              <span class="text-left">Filtre</span>
              <span class="icon-down">
                ▾
              </span>
              <span class="icon-up">
                ▴
              </span>
            </button>
          </div>

          <div id="options-sort" class="shop-options-sort">
            <t t-set="list_price_asc_label">Price - Low to High</t>
            <t t-set="list_price_desc_label">Price - High to Low</t>
            <t t-set="newest_arrivals_desc_label">Newest arrivals</t>
            <t t-set="name_asc_label">Name</t>
          <t t-set="website_sale_sortable"
              t-value="[
                (list_price_asc_label, 'list_price asc'),
                (list_price_desc_label, 'list_price desc'),
                (newest_arrivals_desc_label, 'create_date desc'),
                (name_asc_label, 'name asc')
            ]" />
            <ul >
              <li t-foreach="website_sale_sortable" t-as="sortby">
                <a role="menuitem" rel="noindex,nofollow"
                  t-att-href="keep('/shop', order=sortby[1])" class="dropdown-item">
                  <span t-out="sortby[0]" />
                </a>
              </li>
            </ul>

            <button onclick="openMenu('options-sort')">
              <span class="text-left">
                Trier par
              </span>
              <span class="icon-down">
                ▾
              </span>
              <span class="icon-up">
                ▴
              </span>
            </button>
          </div>
        </div>
      </section>

      <div class="cc_search hidden">
        <t t-call="website.website_search_box_input">
          <t t-set="search_type" t-valuef="all" />
          <t t-set="action" t-valuef="/website/search" />
          <t t-set="limit" t-valuef="5" />
          <t t-set="display_image" t-valuef="true" />
          <t t-set="display_description" t-valuef="true" />
          <t t-set="display_extra_link" t-valuef="true" />
          <t t-set="display_detail" t-valuef="true" />
        </t>
        <div class="cc_shadow" onClick="closeSearch()"></div>
      </div>
    </xpath>
  </template>
</odoo>